<%= @product.errors.full_messages %>

<%= form_for @product do |f| %>
  <div>
    <%= f.label :name %>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div>
    <%= f.label :price %>
    <div>
      <%= f.number_field :price %>
    </div>
  </div>
  <div>
    <%= f.label :stock %>
    <div>
      <%= f.number_field :stock %>
    </div>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>