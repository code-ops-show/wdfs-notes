<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= image_tag product.image.url, class: 'img-responsive' %>
    <div class="caption">
      <h3>
        <%= link_to product.name, 
            product_path(product) %>
      </h3>
      <p><%= product.description %></p>
      <p><%= product.price %></p>
      <p>
        <%= form_for [product, product.items.build] do |f| %>
          <div class='row'>
            <div class='col-md-9'>
              <%= f.submit "Buy", class: 'btn btn-success btn-block' %>
            </div>
            <div class='col-md-3'>
              <%= f.text_field :quantity, class: 'form-control', placeholder: 'Quantity', value: 1 %>
            </div>
          </div>
        <% end %>
        
        <%#= link_to "Edit",
           edit_product_path(product), 
           class: 'btn btn-default' %>
  
      </p>
    </div>
  </div>
</div>