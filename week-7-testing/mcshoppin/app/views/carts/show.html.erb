<h1>Order: <%= @cart.number %></h1>
<div class='row'>
  <div class='col-md-4'>
    Name
  </div>
  <div class='col-md-2'>
    Quantity
  </div>
  <div class='col-md-4'>
    Sub Total
  </div>
  <div class='col-md-2'>
    Remove?
  </div>
</div>
<%= form_for @cart, url: cart_path do |f| %>
  <%= f.fields_for :items do |i| %>
    <%= div_for i.object, class: 'row' do %>
      <div class='col-md-4'>
        <%= i.object.product.name %>
      </div>
      <div class='col-md-2'>
        <%= i.text_field :quantity %>
      </div>
      <div class='col-md-4'>
        <%= i.object.product.price * i.object.quantity %>
      </div>
      <div class='col-md-2'>
        <%= i.check_box :_destroy %>
      </div>
    <% end %>
  <% end %>
  <%= f.submit 'Update Cart' %>
<% end %>


