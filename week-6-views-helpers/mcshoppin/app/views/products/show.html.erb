<h1><%= @product.name %></h1>
<span>
  <%= link_to "Back to all products", products_path %>
</span>
<span>
  <%= link_to "Edit: #{@product.name}", edit_product_path(@product) %>
</span>

<span>
  <%= link_to "Destroy", product_path(@product), method: :delete, data: { confirm: "Are you sure?"} %>
</span>


<div>
  Price: <%= @product.price %>
</div>

<div>
  Stock: <%= @product.stock %>
</div>